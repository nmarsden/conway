{
  "private": true,
  "name": "conway",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-sw --no-prerender",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --refresh",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' 'tests/**/*.test.{ts,tsx}'",
    "test": "jest ./tests",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@egjs/preact-flicking": "^3.2.2",
    "classnames": "^2.3.1",
    "pixi.js": "^6.0.2",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-colorful": "^5.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@storybook/addon-actions": "^6.3.0-beta.13",
    "@storybook/addon-essentials": "^6.3.0-beta.13",
    "@storybook/addon-links": "^6.3.0-beta.13",
    "@storybook/preact": "^6.3.0-beta.13",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/pixi.js": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-loader": "^8.2.2",
    "core-js": "^3.14.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "gh-pages": "^3.1.0",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
